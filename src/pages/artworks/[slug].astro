---
import Layout from '../../layouts/Layout.astro';
import { getProductBySlug, getAllProductSlugs, getAssetURL, formatPrice } from '../../lib/directus';

export async function getStaticPaths() {
  const slugs = await getAllProductSlugs();
  return slugs.map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;
const product = await getProductBySlug(slug);

if (!product) {
  return Astro.redirect('/404');
}

const mainImage = getAssetURL(product.image, { width: 1200, format: 'webp' });
const galleryImages = product.gallery?.map(g => ({
  id: g.directus_files_id,
  url: getAssetURL(g.directus_files_id, { width: 1200, format: 'webp' }),
  thumb: getAssetURL(g.directus_files_id, { width: 150, format: 'webp' }),
})) || [];

const allImages = [
  { id: product.image, url: mainImage, thumb: getAssetURL(product.image, { width: 150, format: 'webp' }) },
  ...galleryImages
].filter(img => img.id);
---

<Layout title={product.title} description={product.description?.replace(/<[^>]*>/g, '').slice(0, 160)}>
  <article class="product section">
    <div class="page-width">
      <div class="product__grid">
        <div class="product__media">
          <div class="product__main-image">
            <img
              src={mainImage || '/placeholder.png'}
              alt={product.title}
              class="product__image zoomable"
            />
          </div>

          {galleryImages.length > 0 && (
            <div class="product__gallery">
              {galleryImages.map((img, index) => (
                <div class={`product__gallery-item ${index % 3 === 2 ? 'product__gallery-item--full' : ''}`}>
                  <img src={img.url} alt={`${product.title} - Image ${index + 2}`} class="zoomable" />
                </div>
              ))}
            </div>
          )}
        </div>

        <div class="product__info">
          <p class="product__type">
            {product.medium === 'paper' ? 'Original Pen-Plotted Artwork' : 'Original Artwork on Canvas'}
          </p>
          <h1 class="product__title">{product.title}</h1>

          {product.description && (
            <div class="product__description" set:html={product.description} />
          )}

          {product.sku && (
            <p class="product__sku">Reference: {product.sku}</p>
          )}

          <div class="product__price-section">
            <span class="product__price">{formatPrice(product.price)}</span>
            {product.status === 'sold' && (
              <span class="product__badge product__badge--sold">Sold out</span>
            )}
          </div>
          <p class="product__shipping">
            Taxes included. <a href="/shipping" class="product__shipping-link">Shipping</a> calculated at checkout.
          </p>

          {product.status === 'sold' ? (
            <button class="button product__button product__button--sold" disabled>
              Sold out
            </button>
          ) : (
            <button
              class="button product__button product__add-to-cart"
              data-product-id={product.id}
              data-product-title={product.title}
              data-product-price={product.price}
              data-product-image={product.image}
              data-product-slug={product.slug}
            >
              Add to Cart
            </button>
          )}
        </div>
      </div>
    </div>
  </article>

  <div class="lightbox" id="lightbox">
    <button class="lightbox__close" aria-label="Close">&times;</button>
    <img class="lightbox__image" id="lightbox-image" src="" alt="" />
  </div>
</Layout>

<style>
  .product__grid {
    display: grid;
    gap: 4rem;
  }

  @media (min-width: 990px) {
    .product__grid {
      grid-template-columns: 1.2fr 1fr;
      gap: 6rem;
    }
  }

  .product__main-image {
    aspect-ratio: 1;
    overflow: hidden;
    background: #FFFFFF;
  }

  .product__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .product__gallery {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .product__gallery-item {
    background: #FFFFFF;
  }

  .product__gallery-item--full {
    grid-column: 1 / -1;
  }

  .product__gallery-item img {
    width: 100%;
    height: auto;
    display: block;
  }

  .zoomable {
    cursor: crosshair;
  }

  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #FFFFFF;
    z-index: 1000;
    overflow-y: auto;
  }

  .lightbox--open {
    display: block;
  }

  .lightbox__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .lightbox__close {
    position: fixed;
    top: 2rem;
    right: 2rem;
    background: #FFFFFF;
    border: none;
    color: #121212;
    font-size: 3rem;
    cursor: pointer;
    line-height: 1;
    padding: 0.5rem 1rem;
    z-index: 1001;
  }

  .lightbox__close:hover {
    opacity: 0.7;
  }

  .product__info {
    padding-top: 70px;
  }

  .product__type {
    font-family: "Open Sans", sans-serif;
    font-size: 14px;
    font-weight: 700;
    color: rgba(18, 18, 18, 0.75);
    letter-spacing: 0.6px;
    line-height: 25.2px;
    margin-top: 0;
    margin-bottom: 14px;
  }

  .product__title {
    font-family: Domine, serif;
    font-size: 40px;
    font-weight: 400;
    color: rgb(18, 18, 18);
    letter-spacing: 0.6px;
    line-height: 52px;
    margin: 0;
    margin-bottom: 24px;
    word-break: break-word;
  }

  .product__description {
    margin-bottom: 24px;
  }

  .product__description :global(p),
  .product__description :global(.p1) {
    font-family: "Open Sans", sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: rgba(18, 18, 18, 0.75);
    letter-spacing: 0.6px;
    line-height: 25.2px;
    margin-top: 0;
    margin-bottom: 0;
  }

  .product__description :global(p:first-child),
  .product__description :global(.p1:first-child) {
    margin-bottom: 20px;
  }

  .product__description :global(strong) {
    font-weight: 400;
  }

  .product__sku {
    font-family: "Open Sans", sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: rgba(18, 18, 18, 0.75);
    letter-spacing: 0.6px;
    line-height: 25.2px;
    margin-top: 0;
    margin-bottom: 0;
  }

  .product__price-section {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: 24px;
    margin-bottom: 4px;
  }

  .product__price {
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.5px;
    color: #121212;
  }

  .product__badge {
    display: inline-block;
    padding: 6px 14px;
    font-size: 12px;
    border-radius: 40px;
  }

  .product__badge--sold {
    background: #E8E8E8;
    color: #666666;
  }

  .product__shipping {
    font-size: 13px;
    color: #666666;
    margin-bottom: 24px;
  }

  .product__shipping-link {
    color: #121212;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .product__shipping-link:hover {
    text-decoration: none;
  }

  .product__button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    min-width: 122px;
    height: 47px;
    min-height: 47px;
    padding: 0 30px;
    font-family: "Open Sans", sans-serif;
    font-size: 15px;
    font-weight: 400;
    letter-spacing: 1px;
    line-height: 18px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-bottom: 10px;
    transition: box-shadow 0.1s ease;
  }

  .product__button--sold {
    background-color: rgb(18, 18, 18);
    color: rgb(255, 255, 255);
    cursor: not-allowed;
    opacity: 0.5;
  }

  .product__button--sold:hover {
    opacity: 0.5;
  }

  .product__add-to-cart {
    background-color: rgb(18, 18, 18);
    color: rgb(255, 255, 255);
  }

  .product__add-to-cart:hover {
    background-color: #333333;
  }
</style>

<script>
  // Lightbox
  const lightbox = document.getElementById('lightbox');
  const lightboxImage = document.getElementById('lightbox-image') as HTMLImageElement;
  const lightboxClose = document.querySelector('.lightbox__close');

  document.querySelectorAll('.zoomable').forEach(img => {
    img.addEventListener('click', () => {
      const src = (img as HTMLImageElement).src;
      const alt = (img as HTMLImageElement).alt;
      lightboxImage.src = src;
      lightboxImage.alt = alt;
      lightbox?.classList.add('lightbox--open');
      document.body.style.overflow = 'hidden';
    });
  });

  function closeLightbox() {
    lightbox?.classList.remove('lightbox--open');
    document.body.style.overflow = '';
  }

  lightboxClose?.addEventListener('click', closeLightbox);
  lightbox?.addEventListener('click', closeLightbox);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeLightbox();
  });

  // Add to cart
  document.querySelector('.product__add-to-cart')?.addEventListener('click', (e) => {
    const btn = e.currentTarget as HTMLButtonElement;
    const product = {
      id: btn.dataset.productId,
      title: btn.dataset.productTitle,
      price: parseInt(btn.dataset.productPrice || '0'),
      image: btn.dataset.productImage,
      slug: btn.dataset.productSlug,
      quantity: 1,
    };

    const cart = JSON.parse(localStorage.getItem('cart') || '[]');
    const existing = cart.find((item: { id: string }) => item.id === product.id);

    if (existing) {
      existing.quantity += 1;
    } else {
      cart.push(product);
    }

    localStorage.setItem('cart', JSON.stringify(cart));
    window.dispatchEvent(new Event('cart-updated'));

    // Feedback
    btn.textContent = 'Added!';
    setTimeout(() => {
      btn.textContent = 'Add to Cart';
    }, 1500);
  });
</script>
