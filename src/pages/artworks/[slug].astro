---
import Layout from '../../layouts/Layout.astro';
import { getProductBySlug, getAllProductSlugs, getAssetURL, formatPrice } from '../../lib/directus';

export async function getStaticPaths() {
  const slugs = await getAllProductSlugs();
  return slugs.map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;
const product = await getProductBySlug(slug);

if (!product) {
  return Astro.redirect('/404');
}

const mainImage = getAssetURL(product.image, { width: 1200, format: 'webp' });
const galleryImages = product.gallery?.map(g => ({
  id: g.directus_files_id,
  url: getAssetURL(g.directus_files_id, { width: 1200, format: 'webp' }),
  thumb: getAssetURL(g.directus_files_id, { width: 150, format: 'webp' }),
})) || [];

const allImages = [
  { id: product.image, url: mainImage, thumb: getAssetURL(product.image, { width: 150, format: 'webp' }) },
  ...galleryImages
].filter(img => img.id);
---

<Layout title={product.title} description={product.description?.replace(/<[^>]*>/g, '').slice(0, 160)}>
  <article class="product section">
    <div class="page-width">
      <div class="product__grid">
        <div class="product__media">
          <div class="product__main-image">
            <img
              src={mainImage || '/placeholder.png'}
              alt={product.title}
              id="main-image"
              class="product__image"
            />
          </div>

          {allImages.length > 1 && (
            <div class="product__thumbnails">
              {allImages.map((img, index) => (
                <button
                  class={`product__thumbnail ${index === 0 ? 'product__thumbnail--active' : ''}`}
                  data-image={img.url}
                  aria-label={`View image ${index + 1}`}
                >
                  <img src={img.thumb} alt="" />
                </button>
              ))}
            </div>
          )}
        </div>

        <div class="product__info">
          <h1 class="product__title">{product.title}</h1>
          <p class="product__price">{formatPrice(product.price)}</p>

          {product.status === 'sold' ? (
            <p class="product__sold">This piece has been sold</p>
          ) : (
            <button
              class="button product__add-to-cart"
              data-product-id={product.id}
              data-product-title={product.title}
              data-product-price={product.price}
              data-product-image={product.image}
              data-product-slug={product.slug}
            >
              Add to Cart
            </button>
          )}

          {product.description && (
            <div class="product__description" set:html={product.description} />
          )}

          {product.sku && (
            <p class="product__sku">Reference: {product.sku}</p>
          )}
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .product__grid {
    display: grid;
    gap: 4rem;
  }

  @media (min-width: 990px) {
    .product__grid {
      grid-template-columns: 1.2fr 1fr;
      gap: 6rem;
    }
  }

  .product__main-image {
    aspect-ratio: 1;
    overflow: hidden;
    background: #f3f3f3;
  }

  .product__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .product__thumbnails {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
  }

  .product__thumbnail {
    flex-shrink: 0;
    width: 6rem;
    height: 6rem;
    padding: 0;
    border: 2px solid transparent;
    background: none;
    cursor: pointer;
    opacity: 0.6;
    transition: all 0.2s;
  }

  .product__thumbnail:hover,
  .product__thumbnail--active {
    opacity: 1;
    border-color: var(--color-foreground);
  }

  .product__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product__info {
    padding-top: 1rem;
  }

  .product__title {
    font-size: 2.8rem;
    margin-bottom: 1rem;
  }

  .product__price {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .product__add-to-cart {
    width: 100%;
    margin-bottom: 2rem;
  }

  .product__sold {
    padding: 1.5rem;
    background: var(--color-background-dark);
    color: var(--color-foreground-dark);
    text-align: center;
    margin-bottom: 2rem;
  }

  .product__description {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(18, 18, 18, 0.08);
    font-size: 1.4rem;
    line-height: 1.8;
  }

  .product__description :global(p) {
    margin-bottom: 1rem;
  }

  .product__description :global(strong) {
    font-weight: 600;
  }

  .product__sku {
    margin-top: 2rem;
    font-size: 1.2rem;
    opacity: 0.5;
  }
</style>

<script>
  // Thumbnail gallery
  document.querySelectorAll('.product__thumbnail').forEach(btn => {
    btn.addEventListener('click', () => {
      const imageUrl = btn.getAttribute('data-image');
      const mainImg = document.getElementById('main-image') as HTMLImageElement;
      if (mainImg && imageUrl) {
        mainImg.src = imageUrl;
      }

      document.querySelectorAll('.product__thumbnail').forEach(b =>
        b.classList.remove('product__thumbnail--active')
      );
      btn.classList.add('product__thumbnail--active');
    });
  });

  // Add to cart
  document.querySelector('.product__add-to-cart')?.addEventListener('click', (e) => {
    const btn = e.currentTarget as HTMLButtonElement;
    const product = {
      id: btn.dataset.productId,
      title: btn.dataset.productTitle,
      price: parseInt(btn.dataset.productPrice || '0'),
      image: btn.dataset.productImage,
      slug: btn.dataset.productSlug,
      quantity: 1,
    };

    const cart = JSON.parse(localStorage.getItem('cart') || '[]');
    const existing = cart.find((item: { id: string }) => item.id === product.id);

    if (existing) {
      existing.quantity += 1;
    } else {
      cart.push(product);
    }

    localStorage.setItem('cart', JSON.stringify(cart));
    window.dispatchEvent(new Event('cart-updated'));

    // Feedback
    btn.textContent = 'Added!';
    setTimeout(() => {
      btn.textContent = 'Add to Cart';
    }, 1500);
  });
</script>
