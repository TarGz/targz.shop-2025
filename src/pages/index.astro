---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import ImageWithText from '../components/ImageWithText.astro';
import { getProductsByMedium } from '../lib/directus';

const PREVIEW_LIMIT = 4;

const paperProducts = await getProductsByMedium('paper', PREVIEW_LIMIT);
const canvasProducts = await getProductsByMedium('canvas', PREVIEW_LIMIT);
---

<Layout title="Shop">
  <section class="hero">
    <div class="hero__content page-width">
      <h1 class="hero__title">Pen Plotter Art</h1>
      <p class="hero__subtitle">Unique generative artworks combining algorithms and traditional artistry</p>
    </div>
  </section>

  <section class="collection section">
    <div class="page-width">
      <ImageWithText
        image="/images/paper.jpg"
        imageAlt="Paper artworks collection"
        title="Pen Plotter Art â¤ï¸"
        description="Pen Plotted art pieces made with love on a custom-made pen plotter in Paris"
        buttonText="Explore Editions"
        buttonLink="/artworks/paper"
        imagePosition="right"
      />

      <div class="product-grid">
        {paperProducts.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>

      {paperProducts.length === 0 && (
        <p class="collection__empty">No paper artworks available at the moment.</p>
      )}
    </div>
  </section>

  <section class="collection section">
    <div class="page-width">
      <ImageWithText
        image="/images/canvas.jpg"
        imageAlt="Canvas artworks collection"
        title="Premium Canvas ðŸ”¥"
        description="Unique and exclusive and durable pieces plotted on high quality canvas and frame on Floater frames"
        buttonText="Explore Originals"
        buttonLink="/artworks/canvas"
        imagePosition="left"
      />

      <div class="product-grid">
        {canvasProducts.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>

      {canvasProducts.length === 0 && (
        <p class="collection__empty">No canvas artworks available at the moment.</p>
      )}
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(to bottom, rgba(0,0,0,0.02), transparent);
    padding: 6rem 0;
    text-align: center;
  }

  .hero__title {
    font-size: 4rem;
    font-weight: 400;
    margin-bottom: 1rem;
  }

  .hero__subtitle {
    font-size: 1.6rem;
    opacity: 0.7;
    max-width: 500px;
    margin: 0 auto;
  }

  .collection__empty {
    text-align: center;
    padding: 4rem;
    opacity: 0.6;
  }

  .product-grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }

  @media (max-width: 749px) {
    .hero__title {
      font-size: 2.8rem;
    }

    .hero {
      padding: 4rem 0;
    }

    .product-grid {
      grid-template-columns: 1fr !important;
    }
  }
</style>
