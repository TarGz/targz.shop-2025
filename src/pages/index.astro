---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import ImageWithText from '../components/ImageWithText.astro';
import { getProductsByMedium } from '../lib/directus';

const PREVIEW_LIMIT = 4;

const paperProducts = await getProductsByMedium('paper', PREVIEW_LIMIT);
const canvasProducts = await getProductsByMedium('canvas', PREVIEW_LIMIT);
---

<Layout title="Shop">
  <section class="banner">
    <div class="banner__media">
      <img
        src="/images/hero.jpg"
        alt="Pen Plotter in action"
        class="banner__image"
        width="1920"
        height="600"
      />
    </div>
    <div class="banner__content page-width">
      <div class="banner__box">
        <h1 class="banner__heading">Original <strong>Pen Plotter Art</strong></h1>
      </div>
    </div>
  </section>

  <section class="collection section">
    <div class="page-width">
      <ImageWithText
        image="/images/paper.jpg"
        imageAlt="Paper artworks collection"
        title="Pen Plotter Art â¤ï¸"
        description="Pen Plotted art pieces made with love on a custom-made pen plotter in Paris"
        buttonText="Explore Originals"
        buttonLink="/artworks/paper"
        imagePosition="right"
      />

      <div class="product-grid">
        {paperProducts.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>

      {paperProducts.length === 0 && (
        <p class="collection__empty">No paper artworks available at the moment.</p>
      )}
    </div>
  </section>

  <section class="collection section">
    <div class="page-width">
      <ImageWithText
        image="/images/canvas.jpg"
        imageAlt="Canvas artworks collection"
        title="Premium Canvas ðŸ”¥"
        description="Unique and exclusive and durable pieces plotted on high quality canvas and frame on Floater frames"
        buttonText="Explore Originals"
        buttonLink="/artworks/canvas"
        imagePosition="left"
      />

      <div class="product-grid">
        {canvasProducts.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>

      {canvasProducts.length === 0 && (
        <p class="collection__empty">No canvas artworks available at the moment.</p>
      )}
    </div>
  </section>
</Layout>

<style>
  .banner {
    position: relative;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    height: 400px;
    isolation: isolate;
  }

  .banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .banner__content {
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding-bottom: 40px;
    z-index: 1;
  }

  .banner__box {
    text-align: center;
  }

  .banner__heading {
    font-family: Domine, serif;
    font-size: 52px;
    font-weight: 400;
    color: #ffffff;
    margin: 0;
    line-height: 1.1;
  }

  .banner__heading strong {
    font-weight: 700;
  }

  .collection__empty {
    text-align: center;
    padding: 4rem;
    opacity: 0.6;
  }

  .product-grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }

  @media (max-width: 749px) {
    .banner {
      height: 280px;
    }

    .banner__heading {
      font-size: 32px;
    }

    .banner__content {
      padding-bottom: 24px;
    }

    .product-grid {
      grid-template-columns: 1fr !important;
    }
  }
</style>
