---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { getProductsByMedium } from '../lib/directus';

const PREVIEW_LIMIT = 4;

const paperProducts = await getProductsByMedium('paper', PREVIEW_LIMIT);
const canvasProducts = await getProductsByMedium('canvas', PREVIEW_LIMIT);
const allPaperProducts = await getProductsByMedium('paper');
const allCanvasProducts = await getProductsByMedium('canvas');
---

<Layout title="Shop">
  <section class="hero">
    <div class="hero__content page-width">
      <h1 class="hero__title">Pen Plotter Art</h1>
      <p class="hero__subtitle">Unique generative artworks combining algorithms and traditional artistry</p>
    </div>
  </section>

  <section class="collection section">
    <div class="page-width">
      <header class="collection__header">
        <h2 class="collection__title">Paper Artworks</h2>
        <p class="collection__count">{allPaperProducts.length} pieces</p>
      </header>

      <div class="product-grid">
        {paperProducts.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>

      {allPaperProducts.length > PREVIEW_LIMIT && (
        <div class="collection__more">
          <a href="/artworks/paper" class="btn btn--outline">View all paper artworks</a>
        </div>
      )}

      {paperProducts.length === 0 && (
        <p class="collection__empty">No paper artworks available at the moment.</p>
      )}
    </div>
  </section>

  <section class="collection section">
    <div class="page-width">
      <header class="collection__header">
        <h2 class="collection__title">Canvas Artworks</h2>
        <p class="collection__count">{allCanvasProducts.length} pieces</p>
      </header>

      <div class="product-grid">
        {canvasProducts.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>

      {allCanvasProducts.length > PREVIEW_LIMIT && (
        <div class="collection__more">
          <a href="/artworks/canvas" class="btn btn--outline">View all canvas artworks</a>
        </div>
      )}

      {canvasProducts.length === 0 && (
        <p class="collection__empty">No canvas artworks available at the moment.</p>
      )}
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(to bottom, rgba(0,0,0,0.02), transparent);
    padding: 6rem 0;
    text-align: center;
  }

  .hero__title {
    font-size: 4rem;
    font-weight: 400;
    margin-bottom: 1rem;
  }

  .hero__subtitle {
    font-size: 1.6rem;
    opacity: 0.7;
    max-width: 500px;
    margin: 0 auto;
  }

  .collection__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 3rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(18, 18, 18, 0.08);
  }

  .collection__title {
    font-size: 2rem;
  }

  .collection__count {
    font-size: 1.3rem;
    opacity: 0.6;
  }

  .collection__empty {
    text-align: center;
    padding: 4rem;
    opacity: 0.6;
  }

  .collection__more {
    text-align: center;
    margin-top: 3rem;
  }

  .btn {
    display: inline-block;
    padding: 1.2rem 3rem;
    font-size: 1.3rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 0;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .btn--outline {
    background: transparent;
    border: 1px solid var(--color-foreground);
    color: var(--color-foreground);
  }

  .btn--outline:hover {
    background: var(--color-foreground);
    color: var(--color-background);
  }

  @media (max-width: 749px) {
    .hero__title {
      font-size: 2.8rem;
    }

    .hero {
      padding: 4rem 0;
    }
  }
</style>
