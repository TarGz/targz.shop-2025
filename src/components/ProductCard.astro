---
import { getAssetURL, formatPrice, type Product } from '../lib/directus';

interface Props {
  product: Product;
}

const { product } = Astro.props;
const imageUrl = getAssetURL(product.image, { width: 600, format: 'webp' });
---

<article class="product-card">
  <a href={`/artworks/${product.slug}`} class="product-card__link">
    <div class="product-card__media">
      {imageUrl ? (
        <img
          src={imageUrl}
          alt={product.title}
          loading="lazy"
          class="product-card__image"
        />
      ) : (
        <div class="product-card__placeholder">
          <span>No image</span>
        </div>
      )}
      {product.status === 'sold' && (
        <span class="product-card__badge product-card__badge--sold">Sold</span>
      )}
    </div>
    <div class="product-card__info">
      <h3 class="product-card__title">{product.title}</h3>
      <p class="product-card__price">{formatPrice(product.price)}</p>
    </div>
  </a>
</article>

<style>
  .product-card {
    text-align: center;
  }

  .product-card__link {
    display: block;
  }

  .product-card__media {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
    background: #f7f7f7;
    margin-bottom: 1.2rem;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .product-card__link:hover .product-card__image {
    transform: scale(1.03);
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 1.2rem;
  }

  .product-card__badge {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    padding: 0.4rem 1rem;
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 6px;
  }

  .product-card__badge--sold {
    background: var(--color-background-dark);
    color: var(--color-foreground-dark);
  }

  .product-card__info {
    padding: 0 0.5rem;
  }

  .product-card__title {
    font-family: var(--font-body);
    font-size: 1.4rem;
    font-weight: 400;
    margin-bottom: 0.4rem;
  }

  .product-card__price {
    font-size: 1.3rem;
    opacity: 0.8;
  }
</style>
