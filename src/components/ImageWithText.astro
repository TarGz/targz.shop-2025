---
interface Props {
  image: string;
  imageAlt?: string;
  title: string;
  description: string;
  buttonText?: string;
  buttonLink?: string;
  imagePosition?: 'left' | 'right';
}

const {
  image,
  imageAlt = '',
  title,
  description,
  buttonText,
  buttonLink,
  imagePosition = 'left'
} = Astro.props;
---

<div class="image-with-text" data-image-position={imagePosition}>
  <div class="image-with-text__media">
    <img src={image} alt={imageAlt} loading="lazy" />
  </div>
  <div class="image-with-text__content">
    <h2 class="image-with-text__heading">{title}</h2>
    <p class="image-with-text__text">{description}</p>
    {buttonText && buttonLink && (
      <a href={buttonLink} class="image-with-text__button">{buttonText}</a>
    )}
  </div>
</div>

<style>
  .image-with-text {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    margin-bottom: 3rem;
  }

  .image-with-text[data-image-position="right"] {
    direction: rtl;
  }

  .image-with-text[data-image-position="right"] > * {
    direction: ltr;
  }

  .image-with-text__media {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-with-text__media img {
    width: 100%;
    height: auto;
  }

  .image-with-text__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 3rem 25% 3rem 25%;
    background: transparent;
  }

  .image-with-text[data-image-position="right"] .image-with-text__content {
    padding: 3rem 25% 3rem 25%;
  }

  .image-with-text__heading {
    font-size: 2.8rem;
    font-weight: 400;
    margin-bottom: 1.5rem;
  }

  .image-with-text__text {
    font-size: 1.4rem;
    line-height: 1.7;
    opacity: 0.8;
    margin-bottom: 2rem;
  }

  .image-with-text__button {
    display: inline-block;
    padding: 1.2rem 2.4rem;
    background: var(--color-button);
    color: var(--color-button-text);
    font-size: 1.3rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: opacity 0.2s ease;
    align-self: flex-start;
  }

  .image-with-text__button:hover {
    opacity: 0.85;
  }

  @media (max-width: 749px) {
    .image-with-text {
      grid-template-columns: 1fr;
    }

    .image-with-text[data-image-position="right"] {
      direction: ltr;
    }

    .image-with-text__content {
      padding: 2rem 1.5rem;
    }

    .image-with-text__heading {
      font-size: 2.2rem;
    }
  }
</style>
